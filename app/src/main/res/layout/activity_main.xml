<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints,UseCompoundDrawables">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50px"
        app:srcCompat="@drawable/cat"
        android:contentDescription="@string/cat" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/hello_world_i_m_cat_2_my_name_is_derzkiy"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:layout_marginTop="200px"
            android:fontFamily="sans-serif"
            android:background="#FFF8DC"
            android:textAlignment="center"
            tools:ignore="TextSizeCheck" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints,UseCompoundDrawables">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50px"
            app:srcCompat="@drawable/cat2"
            android:contentDescription="@string/cat" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Hello World! I'm a driver"
            android:textAlignment="center"
            android:layout_marginTop="150px"
            android:background="#FFEBCD"
            android:textColor="#8B008B"
            android:fontFamily="casual"
            android:textStyle="bold|italic"
            tools:ignore="TextSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints,UseCompoundDrawables">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginLeft="50px"
            android:layout_marginTop="50px"
            app:srcCompat="@drawable/cuties"
            android:contentDescription="@string/cat" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Hello World! I'm duck. I'm going to kill you"
            android:textColor="#8B0000"
            android:layout_marginTop="150px"
            android:layout_marginLeft="50px"
            android:background="#E0FFFF"
            android:fontFamily="monospace"
            tools:ignore="TextSizeCheck" />

    </LinearLayout>


</LinearLayout>